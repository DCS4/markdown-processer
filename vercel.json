{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "TRANSFORMERS_CACHE": "/tmp/transformers_cache",
    "HF_HOME": "/tmp/hf_cache"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 300
    }
  },
  "excludeFiles": [
    "Dockerfile",
    "docker-compose.yml",
    "requirements-base.txt",
    "requirements-torch.txt",
    "model-cache/**",
    "whl/**",
    "logs/**",
    "uploads/**",
    "*.md",
    "deploy.sh",
    "nginx.conf"
  ]
}